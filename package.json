{
    "name": "npm-commander",
    "version": "1.0.0",
    "description": "Universal NPM Project Runner for macOS",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --mac"
    },
    "author": "Eleada",
    "build": {
        "appId": "com.twisted.npmcommander",
        "productName": "NPM Commander",
        "mac": {
            "category": "public.app-category.developer-tools",
            "icon": "assets/NPMCommander.icns",
            "identity": null,
            "target": [
                "dir"
            ]
        },
        "files": [
            "main.js",
            "preload.js",
            "renderer/**/*",
            "assets/**/*"
        ],
        "directories": {
            "output": "dist"
        }
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    }
}