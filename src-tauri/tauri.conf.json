{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "NPM Commander",
    "version": "2.0.0",
    "identifier": "com.npmcommander.gui",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:5173",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "NPM Commander",
                "width": 1200,
                "height": 800,
                "minWidth": 900,
                "minHeight": 600,
                "resizable": true,
                "fullscreen": false,
                "decorations": true,
                "titleBarStyle": "Overlay",
                "hiddenTitle": true,
                "transparent": false,
                "acceptFirstMouse": true,
                "dragDropEnabled": true
            }
        ],
        "security": {
            "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.png",
            "icons/icon.icns"
        ],
        "macOS": {
            "minimumSystemVersion": "10.15",
            "dmg": {
                "background": "dmg-background.png",
                "windowSize": {
                    "width": 600,
                    "height": 400
                },
                "appPosition": {
                    "x": 180,
                    "y": 170
                },
                "applicationFolderPosition": {
                    "x": 420,
                    "y": 170
                }
            }
        }
    }
}